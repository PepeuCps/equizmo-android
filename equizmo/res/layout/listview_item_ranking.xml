<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dip"
    android:minHeight="50dip" >

    <TextView
        android:id="@+id/listview_item_ranking_colocacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_listview_item_ranking_colocacao"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listview_item_ranking_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@+id/listview_item_ranking_colocacao"
        android:textColor="@color/color_listview_item_ranking_nome"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/listview_item_ranking_pontuacao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/color_listview_item_ranking_pontuacao"
        android:textSize="18sp" />

</RelativeLayout>